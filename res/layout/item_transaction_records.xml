<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_transaction_records_hight"
    android:orientation="horizontal"
    android:weightSum="1" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="0.17"
        android:gravity="center"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/item_tv_record_transaction2_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_tv_item_trsr"
            android:textSize="@dimen/font_size_15"
            android:text="周三\n3-15" />

    </RelativeLayout>
    
    <View 
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.04"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/item_tv_record_transaction2_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_8"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/icon_qita"
            android:textColor="@color/black_tv_item_trsr"
            android:text="其他" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="0.41"
        android:gravity="center"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/item_tv_record_transaction2_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black_tv_item_trsr"
            android:textSize="@dimen/tv_size_high"
            android:text="-3000\n185****3344" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="0.23"
        android:gravity="center"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/item_tv_record_transaction2_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cyan_tv"
            android:textSize="@dimen/font_size_15"
            android:text="\n交易成功 "/>

    </RelativeLayout>

</LinearLayout>
