<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_title_hight"
    android:background="@color/blue_normal" 
    android:id="@+id/rl_title">

    <TextView
        android:id="@+id/activity_title_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_size_high" />

    <Button
        android:id="@+id/activity_title_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/widget_ml_low"
        android:drawableLeft="@drawable/icon_back"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_size_high"
        android:background="@null"
         />
<!--         android:background="@drawable/button_back_select_bg" -->

    <Button
        android:id="@+id/activity_title_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:text="@string/login_regist"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_size"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/activity_title_text_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:layout_marginRight="10dp"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_size_high"
        android:visibility="gone" />

</RelativeLayout>