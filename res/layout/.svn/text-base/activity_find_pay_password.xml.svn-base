<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_bg"
        android:orientation="vertical" >

        <include
            android:id="@+id/act_top"
            layout="@layout/activity_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/textView223"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/widget_ml_big"
                android:text="问题一"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/act_tv_fp_question_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/widget_ml_low_findpwd"
                android:layout_marginRight="@dimen/widget_ml_low"
                android:layout_toRightOf="@+id/textView223"
                android:background="@color/white"
                android:gravity="center_vertical" />
            <!-- </RelativeLayout> -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/act_tv_fp_question_1"
                android:layout_below="@+id/act_tv_fp_question_1"
                android:background="@color/gray_border" />

            <TextView
                android:id="@+id/tv_solution_titlt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView223"
                android:layout_below="@+id/textView223"
                android:layout_marginTop="10dp"
                android:text="@string/solution"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/act_edt_find_pay_solution_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/act_tv_fp_question_1"
                android:layout_below="@+id/act_tv_fp_question_1"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_solution_titlt_1"
                android:background="@color/transparent"
                android:ems="10"
                android:gravity="center_vertical|left"
                android:hint="请输入密保答案"
                android:inputType="text"
                android:singleLine="true"
                android:textColorHint="@color/gray_tv_cl"
                android:textSize="@dimen/tv_size" >
            </EditText>
        </RelativeLayout>
        <!-- </LinearLayout> -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/widget_ml_big"
                android:text="问题二"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/act_tv_fp_question_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/widget_ml_low_findpwd"
                android:layout_marginRight="@dimen/widget_ml_low"
                android:layout_toRightOf="@+id/textView23"
                android:background="@color/white"
                android:gravity="center_vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/act_tv_fp_question_2"
                android:layout_below="@+id/act_tv_fp_question_2"
                android:background="@color/gray_border" />

            <TextView
                android:id="@+id/tv_solution_titlt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView23"
                android:layout_below="@+id/textView23"
                android:layout_marginTop="10dp"
                android:text="@string/solution"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/act_edt_find_pay_solution_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/act_tv_fp_question_2"
                android:layout_below="@+id/act_tv_fp_question_2"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_solution_titlt_2"
                android:background="@color/transparent"
                android:ems="10"
                android:gravity="center_vertical|left"
                android:hint="请输入密保答案"
                android:inputType="text"
                android:singleLine="true"
                android:textColorHint="@color/gray_tv_cl"
                android:textSize="@dimen/tv_size" >
            </EditText>
        </RelativeLayout>

        <Button
            android:id="@+id/act_btn_find_pay_get"
            style="@style/MyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_mt"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>