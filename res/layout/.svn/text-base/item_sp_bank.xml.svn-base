<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/item_tv_bank_name_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_bankicon"
        android:gravity="center_vertical"
        android:text="中国银行"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_size" />

    <ImageView
        android:id="@+id/iv_bankicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_bank_china" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/item_tv_bank_name_list"
        android:layout_alignParentBottom="true"
        android:background="#E6E6E8"
        android:paddingTop="10dp" />

</RelativeLayout>