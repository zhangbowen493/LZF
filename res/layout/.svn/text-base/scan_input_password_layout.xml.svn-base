<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="付款确认"
        android:textColor="#faa32f"
        android:textSize="@dimen/tv_size_high" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/input_password_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="185****6754"
            android:textColor="@color/gray_tv_cl" />
    </RelativeLayout>

    <EditText
        android:id="@+id/input_password_goods_money"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/gray_box_bg"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="金额"
        android:paddingLeft="8dp"
        android:textSize="@dimen/tv_size" />

    <!--
         <EditText
        android:id="@+id/input_password_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="8dp"
        android:inputType="textPassword"
        android:background="@drawable/gray_box_bg"
        android:hint="请输入支付密码" />
    -->

    <cn.passguard.PassGuardEdit
        android:id="@+id/input_password_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_high"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gray_box_bg"
        android:ems="10"
        android:gravity="center_vertical|left"
        android:hint="请输入支付密码"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:textColorHint="@color/gray_tv_cl"
        android:textSize="@dimen/tv_size" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <Button
            android:id="@+id/other_dialog_listview_back"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/button_unusable"
            android:maxWidth="120dp"
            android:minWidth="120dp"
            android:text="@string/cancel"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/other_dialog_listview_sure"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_select_bg"
            android:maxWidth="120dp"
            android:minWidth="120dp"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>